import 'package:flutter/material.dart';
import 'dart:math';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Flutter Demo',
      debugShowCheckedModeBanner: false,
      theme: ThemeData(
        primarySwatch: Colors.blue,
      ),
      home: const MyHomePage(title: 'Flutter Demo Home Page'),
    );
  }
}

class MyHomePage extends StatefulWidget {
  final String title;

  const MyHomePage({
    Key? key,
    required this.title,
  }) : super(key: key);

  @override
  _MyHomePageState createState() => _MyHomePageState();
}

class _MyHomePageState extends State<MyHomePage> {
 
  
String selectedName = '';
  String newName=' ';
  void _incrementCounter() {
    
    int selectCat = Random().nextInt(Categories.categories.length);
    
    switch (selectCat) {
      case 0:
        // do something
        selectedName = Categories.fruits[Random().nextInt(Categories.fruits.length)];
        break;
      case 1:
        selectedName = Categories.animals[Random().nextInt(Categories.animals.length)];
        break;
      case 2:
        selectedName = Categories.colors[Random().nextInt(Categories.colors.length)];
        break;
      case 3:
        selectedName = Categories.countries[Random().nextInt(Categories.countries.length)];
        break;
      case 4:
        selectedName = Categories.brands[Random().nextInt(Categories.brands.length)];
        break;
      case 5:
    }
    setState(() {
      newName = selectedName;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text(widget.title),
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            const Text(
              'Qual a palavra??',
            ),
            Text(
              newName[0],
              style: Theme.of(context).textTheme.headline4,
            ),
          ],
        ),
      ),
      floatingActionButton: FloatingActionButton(
        onPressed: _incrementCounter,
        tooltip: 'Increment',
        child: const Icon(Icons.add),
      ),
    );
  }
}

class Categories {
  static List<String> fruits = [];
  static List<String> animals = [];
  static List<String> brands = [];
  static List<String> countries = [];
  static List<String> colors = [];


  static List<String> categories = [
    'fruits',
    'animals',
    'brands',
    'countries',
    'colors',
  ];
}
